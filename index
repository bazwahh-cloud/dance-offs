<script>
const BASE_URL =
  "https://script.google.com/macros/s/AKfycbyfiIlExm-_OC9ULZHPaNkIaJ7RWKRDbkTSplu6_8A37cEy5Ph1YAdjF58dwF3uEntOdQ/exec";

function getYouTubeID(url) {
    const patterns = [/v=([^&]+)/, /youtu\\.be\\/([^?]+)/, /shorts\\/([^?]+)/, /embed\\/([^?]+)/];
    for (const p of patterns) {
        const m = url.match(p);
        if (m) return m[1];
    }
    return null;
}

function vote(battleIndex, winner) {
    fetch(BASE_URL + "?mode=vote&battle=" + battleIndex + "&winner=" + winner)
        .then(() => {
            alert("Vote recorded for " + winner);
            loadBattles();
        });
}

async function loadLatestSoundCloud() {
    const res = await fetch(BASE_URL + "?mode=lastsoundcloud&cache=" + Math.random());
    const data = await res.json();
    if (!data || !data.url) return;

    const src = "https://w.soundcloud.com/player/?url=" +
        encodeURIComponent(data.url) +
        "&color=%23ff5500&inverse=false&show_user=true&auto_play=true";

    document.getElementById("scPlayer").innerHTML =
        "<iframe width='100%' height='150' frameborder='0' allow='autoplay' src='" + src + "'></iframe>";
}

async function loadBattles() {
    const [res, voteRes] = await Promise.all([
        fetch(BASE_URL + "?mode=read&cache=" + Math.random()),
        fetch(BASE_URL + "?mode=votecounts&cache=" + Math.random())
    ]);

    const data = await res.json();
    const voteTotals = await voteRes.json();

    const container = document.getElementById("battleContainer");
    container.innerHTML = "";

    const clean = data.filter(r => r.performer && r.youtube);
    const lefts = clean.filter(r => r.performer.toLowerCase().includes("left"));
    const rights = clean.filter(r => r.performer.toLowerCase().includes("right"));

    const battleCount = Math.min(lefts.length, rights.length);

    for (let i = 0; i < battleCount; i++) {
        const left = lefts[i];
        const right = rights[i];

        const leftID = getYouTubeID(left.youtube);
        const rightID = getYouTubeID(right.youtube);

        const leftVotes = voteTotals[left.youtube] || 0;
        const rightVotes = voteTotals[right.youtube] || 0;

        const div = document.createElement("div");
        div.className = "battle";

        div.innerHTML = `
            <div class="row">
                <div class="side">
                    <div class="thumb-wrapper">
                        <iframe class="thumb-video"
                            src="https://www.youtube.com/embed/${leftID}?autoplay=1&mute=1&controls=0&loop=1&playlist=${leftID}">
                        </iframe>
                    </div>
                    <strong>${left.performer}</strong>
                    <div class="vote-count">Votes: ${leftVotes}</div>
                    <button class="vote-btn" onclick="vote(${i}, 'Left')">Vote Left</button>
                </div>

                <div class="side">
                    <div class="thumb-wrapper">
                        <iframe class="thumb-video"
                            src="https://www.youtube.com/embed/${rightID}?autoplay=1&mute=1&controls=0&loop=1&playlist=${rightID}">
                        </iframe>
                    </div>
                    <strong>${right.performer}</strong>
                    <div class="vote-count">Votes: ${rightVotes}</div>
                    <button class="vote-btn" onclick="vote(${i}, 'Right')">Vote Right</button>
                </div>
            </div>
        `;

        container.appendChild(div);
    }
}

document.getElementById("fullOverlay").onclick = () => {
    document.getElementById("fullOverlay").style.display = "none";
};

loadLatestSoundCloud();
loadBattles();
</script>

